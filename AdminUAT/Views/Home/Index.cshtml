@model ICollection<AdminUAT.Models.AdminUat.Noticia>

@{
    ViewData["Title"] = "Bienvenido(a)";
    var color = true;
}

<hr class="py-2" />
<div class="container shadow-lg p-3 mb-5 rounded border border-success">
    <br />
    <h2 class="px-3 text-muted">Bienvenido(a)</h2>
    <br />
    <div class="col-12">
        <div class="alert blue-gradient1 text-monospace text-center text-white">
            <h5>
                <spain class="fa fa-user"></spain> @ViewBag.nombre
            </h5>
            <a href="~/Home/Manual" class="btn btn-info btn-sm rounded-pill">Guía de usuario</a>
        </div>
    </div>
    <br />
</div>

<!--Sección de noticias-->
<div class="blockquote container border-light rounded-pill" style="border-right-style:solid; border-right-width:4px;">
