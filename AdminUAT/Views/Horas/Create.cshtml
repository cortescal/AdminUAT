@model AdminUAT.Models.AgendaUAT.Hora

@{
    ViewData["Title"] = "Agregar";
    Layout = "_LayoutMDB";
}

<h4> Agregar Hora</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CampoHora" class="control-label">Hora</label>
                <div class="input-group clockpicker">
                    <input asp-for="CampoHora" class="form-control" value="--:--">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="far fa-clock"></i></span>
                    </div>
                </div>
                <span asp-validation-for="CampoHora" class="text-danger"></span>
            </div>
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="customSwitches" asp-for="Activo" checked>
                <label class="custom-control-label" for="customSwitches">Activo</label>
            </div>
            <div class="form-group py-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>


<script type="text/javascript">
    $('.clockpicker').clockpicker({
        autoclose: 'true'
    });
</script>