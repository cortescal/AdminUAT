@{
    Layout = null;
}

<div class="py-3"></div>
<div class="form-group">
                <select class="selectpicker col-12" data-live-search="true" data-style="btn-primary" id="dia">
                    <option value=""></option>
                    @foreach (var item in ViewBag.DiaId)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
                <small class="col-12 text-danger" id="alerta_dia"></small>
        </div>
        <div class="form-group">
            <select class="selectpicker col-12" data-live-search="true" data-style="btn-primary" id="horas" multiple>
                <option value=""></option>
                @foreach (var item in ViewBag.HoraId)
                {
                    <option value="@item.Id">@item.CampoHora hrs</option>
                }
            </select>
            <small class="col-12 text-danger" id="alerta_horas"></small>
        </div>

        <div class="form-group text-right">
            <div class="col-12 py-3">
                <input type="submit" value="Aceptar" class="btn btn-outline-primary btn-sm" onclick="addHorario(@ViewBag.MpId)" />
            </div>
        </div>


        <script>
            $('select').selectpicker();
        </script>

        <script type="text/javascript">
            $(function () {
                $('#from').datetimepicker({
                    format: 'DD-MM-YYYY',
                    minDate: new Date(),
                });
            });
        </script>
