@model AdminUAT.Models.ExtraModels.Admin.EstadisticaObjetivos
@{
    ViewData["Title"] = "Objetivo";
    Layout = "_LayoutMDB";
}

<form class="form-inline md-form form-sm" method="get" asp-area="" asp-controller="Root" asp-action="EstadisticaObjetivo">
    <div class="form-group mx-sm-3 mb-2">
        <input type="date" name="fecha" class="form-control form-control-sm mr-3 w-75">
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <input type="date" name="fecha2" class="form-control form-control-sm mr-3 w-75">
    </div>
    <button type="submit" class="btn btn-primary mb-2 btn-sm"><i class="fa fa-search"></i></button>
</form>

<h5 class="text-center">Que el 90% de la ciudadanía que uso el Sistema UAT@@ su respuesta sea satisfactoria</h5>

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 py-3">
            <div class="card blue-gradient text-white z-depth-3">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-lg-7 col-sm-12">
                            <h4 class="card-title py-3">Respuestas positivas</h4>
                        </div>
                        <div class="col-lg-5 col-sm-12 py-2">
                            <h1>@Model.PorcientoSi</h1>
                        </div>
                    </div>
                    <hr>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width:@Model.PorcientoSi" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <br />
                    <div class="black-text d-flex justify-content-end"><h5><i class="fas fa-star"></i> @Model.EncuestaSi/@Model.EncuestaTotal</h5></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 py-3">
            <div class="card peach-gradient text-white z-depth-3">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-lg-7 col-sm-12">
                            <h4 class="card-title py-3">Respuestas negativas</h4>
                        </div>
                        <div class="col-lg-5 col-sm-12 py-2">
                            <h1>@Model.PorcientoNo</h1>
                        </div>
                    </div>
                    <hr>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width:@Model.PorcientoNo" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <br />
                    <div class="black-text d-flex justify-content-end"><h5><i class="far fa-star"></i> @Model.EncustaNo/@Model.EncuestaTotal</h5></div>
                </div>
            </div>
        </div>
    </div>


<hr />
<h5 class="text-center">Canalizar el 100% de las denuncias del Sistema UAT@@ al Ministerio Público</h5>
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 py-3">
        <div class="card purple-gradient text-white z-depth-3">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-lg-7 col-sm-12">
                        <h4 class="card-title py-3">Denuncias canalizadas a Ministerio Público</h4>
                    </div>
                    <div class="col-lg-5 col-sm-12 py-2">
                        <h1>@Model.PorcientoAsignadas</h1>
                    </div>
                </div>
                <hr>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width:@Model.PorcientoAsignadas" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <br />
                <div class="black-text d-flex justify-content-end"><h5><i class="far fa-thumbs-up"></i> @Model.DenunciasAsignadas/@Model.DenunciasTotal</h5></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 py-3">
        <div class="card morpheus-den-gradient text-white z-depth-3">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-lg-7 col-sm-12">
                        <h4 class="card-title py-3">Denuncias sin canalizar a Ministerio Público</h4>
                    </div>
                    <div class="col-lg-5 col-sm-12 py-2">
                        <h1>@Model.PorcientoSinAsignar</h1>
                    </div>
                </div>
                <hr>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated" role="progressbar" style="width:@Model.PorcientoSinAsignar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <br />
                <div class="black-text d-flex justify-content-end"><h5><i class="far fa-thumbs-down"></i> @Model.DenunciasSinAsignar/@Model.DenunciasTotal</h5></div>
            </div>
        </div>
    </div>
</div>